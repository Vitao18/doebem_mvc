div.layout-padding#cadOng(layout="column" layout-align="center center")
  h1 Cadastre aqui sua ONG
  .container(layout = "row" )
    div#form(flex="100")
      div(layout="column" flex="100")
        form(name="ongForm" layout="column" ng-submit="$ctrl.addOng($ctrl.ongForm)")
          div(layout="row" layout-gt-sm="column" flex="100" )
            div#info(layout="row" flex="100")
              md-input-container.md-block.md-icon-float(flex-gt-sm)
                md-icon
                  i.fa.fa-user  
                label Nome Fantasia
                input(ng-model="$ctrl.ongForm.nomeFantasia" required)         
              md-input-container.md-block(flex-gt-sm)
                label Razão Social
                input(ng-model="$ctrl.ongForm.razaoSocial" required)
              md-input-container.md-block(flex-gt-sm flex="20")
                label CNPJ
                input(ng-model="$ctrl.ongForm.cnpj" ui-br-cnpj-mask required)  
            div#info(layout="row" flex="100")    
              md-input-container.md-block(flex-gt-sm)
                md-icon
                  i.fa.fa-phone   
                input(type="text" ng-model="$ctrl.ongForm.telefone"  placeholder="Telefone" ui-br-phone-number ng-required="true")  
              md-input-container.md-block(md-no-float flex-gt-sm)
                md-icon
                  i.fa.fa-envelope   
                input(type="email" ng-model="$ctrl.ongForm.email" placeholder="Email" required)                              
            div#End(layout="row" flex="100")   
              md-input-container.md-block.md-icon-float(flex-gt-sm flex="15")
                md-icon
                  i.fa.fa-search  
                label Cep
                input(ng-model="$ctrl.ongForm.cep" ui-br-cep-mask  required)          
              md-input-container.md-block(flex-gt-sm flex="35")
                label Logradouro
                input(ng-model="$ctrl.ongForm.logradouro" required) 
                md-icon
                  i.fa.fa-map-marker  
              md-input-container.md-block(flex-gt-sm flex="10")
                label num
                input(ng-model="$ctrl.ongForm.num" required) 
                md-icon
                  i.fa.fa-map-marker        
              md-input-container.md-block(flex-gt-sm flex="20")
                label Cidade 
                input(ng-model="$ctrl.ongForm.cidade" required)   
              md-input-container.md-block(flex-gt-sm flex="10")
                label Estado
                md-select(ng-model="$ctrl.ongForm.uf" )  
                  md-option(ng-repeat="state in $ctrl.states" value="{{state.Sigla}}")
                  span {{state.Nome}}
            div.md-padding#info(layout="row" flex="100")          
              md-input-container.md-block(flex-gt-sm)
                label Area de Atuação
                md-select(ng-model="$ctrl.ongForm.areaDeAtuacao" )  
                  md-option(ng-repeat="area in $ctrl.listAreasDeAtuacao" value="{{area.abbrev}}")
                  span {{area.desc}}
              md-input-container.md-block(flex-gt-sm)
                label Logo
                input(ng-model="$ctrl.ongForm.logo" required)      
            div.padding#desc(layout="$ctrl.column" flex="100")
              md-input-container.md-block(flex-gt-sm)
                label Desc
                textarea(ng-model="$ctrl.ongForm.desc" columns="1")
          div(flex="10")         
            md-button.md-raized.md-primary(type="submit") Cadastrar 

script(type="text/ng-template" id="dialogEmailSend.tmpl.pug")
  md-dialog(aria-label="emailSend")
    form(ng-cloak)
      md-toolbar
        div.md-toolbar-tools
          h2 Email Enviado!
          span(flex)
          md-button.md-icon-button(aria-label="md-button ok", ng-click="cancel()")
            md-icon
              ng-md-icon.name(icon="close" style="fill: white")
      md-dialog-content
        div.md-dialog-content
          h2 Obrigado pela sua mensagem! {{$ctrl.user.fistName}}
      md-dialog-actions(layout="row")
        span(flex)
         md-button(ng-click="cancel()") Ok         